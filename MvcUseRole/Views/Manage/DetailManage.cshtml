@model MvcUseRole.Models.FileUpload
@{
    ViewBag.Title = "DetailManage";
}

<h2>Detail Manage</h2>
<div class="alert alert-info">@ViewBag.message</div>
<h3>@(Html.ActionLink("Back To Manage", "Index", new { id = 1 }, new { @class = "btn btn-primary btn-md" }))</h3>
<table class="table table-striped table-condensed table-responsive" style="margin-top:20px;">
    <thead>
        <tr>
            <th colspan="5" class="alert-info"><center>Data Image</center></th>
        </tr>
        <tr>
            <th>ID</th>
            <th>User ID</th>
            <th>FileName</th>
            <th>FilePath</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.See)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.UserId</td>
                <td>@item.FileName</td>
                <td><img src="@Url.Content(item.FilePath)" alt="Image" height="50" width="50" /></td>
                <td>
                    @*@(Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-info btn-sm" }))*@
                    @(Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-sm" }))
                </td>
            </tr>
        }
    </tbody>
</table>

